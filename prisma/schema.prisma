generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  image       String?
  price       Float
  stock       Int
  category    String?
  createdAt   DateTime @default(now())
}

model Video {
  id        Int      @id @default(autoincrement())
  platform  String   // instagram | youtube
  url       String
  thumbnail String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

